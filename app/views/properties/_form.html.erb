<%= form_with(model: @property, local: true) do |form| %>
<% if @property.errors.any? %>
      <h2><%= pluralize(@property.errors.count, "つのエラーがあります。") %></h2>
        <% @property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
<% end %>
  <div class="name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="rent">
    <%= form.label :rent %>
    <%= form.text_field :rent %>
  </div>
  <div class="address">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div class="age">
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>
  <div class="remarks">
    <%= form.label :remarks %>
    <%= form.text_field :remarks %>
  </div>
  <%= form.fields_for :stations do |s| %>
    <strong>
      最寄り駅<%= "#{s.index+1}" %>
    </strong>
    <div class="line">
      <%= s.label :路線名 %>
      <%= s.text_field :line %>
    </div>
    <div class="station">
      <%= s.label :駅名 %>
      <%= s.text_field :nearest_station %>
    </div>
    <div class="on_foot">
      <%= s.label :徒歩分数 %>
      <%= s.text_field :on_foot %>
    </div>
  <% end %>
  <%= form.submit '登録する' %>
<% end %>
<%= link_to "戻る", properties_path %>
